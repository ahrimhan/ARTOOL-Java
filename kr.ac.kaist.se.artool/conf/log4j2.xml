<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" strict="true" name="XMLConfigTest"
               packages="org.apache.logging.log4j.test">
               
  <Properties>
    <Property name="iteration_time_file">/Users/igsong/log/iteration_time.log</Property>
  </Properties>
  
  <Filter type="ThresholdFilter" level="trace"/>
 
  <Appenders>
    <Appender type="Console" name="STDOUT">
      <Layout type="PatternLayout">
        <!--<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>-->
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}, %m%n</Pattern>
      </Layout>
    </Appender>
    <Appender type="Console" name="FLOW">
      <Layout type="PatternLayout" pattern="%C{1}.%M %m %ex%n"/><!-- class and line number -->
      <Filters>
        <Filter type="MarkerFilter" marker="FLOW" onMatch="ACCEPT" onMismatch="NEUTRAL"/>
        <Filter type="MarkerFilter" marker="EXCEPTION" onMatch="ACCEPT" onMismatch="DENY"/>
      </Filters>
    </Appender>


    <Appender type="File" name="CandidateFile" fileName="${sys:candidate_filename}">
      <Layout type="PatternLayout">
        <!--<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>-->
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}, %m%n</Pattern>
      </Layout>
    </Appender>
    <Appender type="File" name="SelectionFile" fileName="${sys:selection_filename}">
      <Layout type="PatternLayout">
        <!--<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>-->
        <Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}, %m%n</Pattern>
      </Layout>
    </Appender>
    <Appender type="File" name="IterationTimeFile" fileName="${sys:iteration_time_file}">
      <Layout type="PatternLayout">
        <!--<Pattern>%d %p %C{1.} [%t] %m%n</Pattern>-->
        <!--<Pattern>%d{yyyy-MM-dd HH:mm:ss.SSS}, %m%n</Pattern>-->
      </Layout>
    </Appender>
    <Appender type="List" name="List">
    </Appender>
  </Appenders>
 
  <Loggers>
    <Logger name="SimpleLogger" level="debug" additivity="false">
      <AppenderRef ref="STDOUT"/>
    </Logger>
 
    <Logger name="Candidate" level="debug" additivity="false">
      <AppenderRef ref="CandidateFile"/>
    </Logger>

    <Logger name="Selection" level="debug" additivity="false">
      <AppenderRef ref="SelectionFile"/>
    </Logger>
    
    <Logger name="IterationTime" level="debug" additivity="true">
      <AppenderRef ref="IterationTimeFile"/>
    </Logger>
 
  </Loggers>
</Configuration>
